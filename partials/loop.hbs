<div class="post-list">

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<figure class="post-image">
			{{#if image}}
			<a class="js-ajax-link js-show-post" href="{{url}}"><img src="{{image}}" alt="" /></a>
			{{/if}}
		</figure>
		<span class="post-meta">
			<span class="post-date">{{date format="DD MMM YYYY"}}</span>
		</span>
		<h2 class="post-title"><a class="js-ajax-link js-show-post" href="{{url}}">{{{title}}}</a></h2>
		<p class="post-excerpt">{{excerpt words="15"}}&hellip;</p>
		<span class="post-more"><a class="js-ajax-link js-show-post" href="{{url}}">Read More <i class="icon-arrow-right"></i></a></span>
	</div>
</article>

{{/foreach}}

</div>

{{pagination}}